@model IEnumerable<TestModels.Models.Book>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr class="header">
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (TestModels.Models.Book b in Model)
            {
            <tr>
                <td><p><a href="/Home/BookView/@b.Id">@b.Name</a></p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                <td><p><a href="/Home/Delete/@b.Id">Remove</a></p></td>
            </tr>
        }

        <p><a href="/Home/Create/">Add New Book</a></p>
    </table>
</div>